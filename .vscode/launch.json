{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI with version command", 
            "type": "debugpy",
            "request": "launch",
            "module": "homelab_devtools.main",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}